<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/layoutPeopleAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layoutPeopleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textColor="#000000"
        android:text="NAME NAME"
        app:layout_constraintStart_toEndOf="@id/layoutPeopleAvatar"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/layoutPeopleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/ic_recipe"
        android:textColor="#696969"
        app:layout_constraintStart_toEndOf="@id/layoutPeopleAvatar"
        app:layout_constraintTop_toBottomOf="@id/layoutPeopleName"/>

    <Button
        android:id="@+id/layoutPeopleFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_button_white"
        android:textColor="#808080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>